<% include ../partials/headers %>

<body>
  <form action="/projects/addMember/<%=projectid %>" method="POST">
    <div class="container" style="padding: 10px">
      <h1>Add Project</h1>
      <br />
      <fieldset class="form-group">
          <div class="form-group row">
            <div class="col-sm-2">Members</div>
            <div class="col-sm-10">
                <% for(let i = 0; i < data.length; i++){ %>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="name" id="gridCheck2" value="<%=data[i].userid%>" >
                    <label class="form-check-label" for="gridCheck2">
                      <%= data[i].firstname%> <%= data[i].lastname%>
                    </label>
                </div>
                <% } %>
            </div>
        </div>
        </fieldset>    
        <fieldset class="form-group" >
                <div class="row">
                    <div class="col-sm-2">
                        <legend class="col-form-label col-sm-2">Position</legend>
                    </div>
                    <div class="col-sm-10 ml-5">
                        <div class="form-check">
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="position" id="manager" value="Manager"
                                    class="custom-control-input">
                                <label class="custom-control-label" for="manager">Manager</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-10 ml-5">
                        <div class="form-check">
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="position" id="programmer" value="Programmer"
                                    class="custom-control-input">
                                <label class="custom-control-label" for="programmer">Programmer</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-10 ml-5">
                        <div class="form-check">
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="position" id="qualityassurance" value="Quality
                                Assurance"
                                    class="custom-control-input">
                                <label class="custom-control-label" for="qualityassurance">Quality
                                    Assurance</label>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

        <button type="submit"class="btn btn-primary"nstyle="border-radius: 20px; margin-bottom: 20px;" >
          Save
        </button>
      </form>
    </div>
  </form>
  
  <% include ../partials/footers %>

