<% include ../partials/headers %>

<h2>Filters</h2>
<div class="container" style="padding-top: 20px">
  <form action="/projects/edit/<%= projectid %>" method="POST">
    <input type="hidden" name="page" value="1" />
    <!---------Menampilkan box id------->
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">ID</label>
      <div class="col-sm-8">
        <input type="text" class="form-control"  id="id" name="id"
          value="<%= projectid %>"disabled
        />
      </div>
    </div>
    <!---------Menampilkan box Nama------->
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-8">
        <input
          type="text"class="form-control" id="string" name="name"
          value="<%= name %>"/>
      </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">Members</div>
        <div class="col-sm-10">
            <% users.forEach((item) => { %>
            <div class="custom-control custom-checkbox my-1 mr-sm-2">
                <input type="checkbox" class="custom-control-input" id="customControlInline<%=item.userid%>"
                    name="member" value="<%= item.userid%>, '<%= item.roles %>'" <%= members.includes(item.userid)  ? ' checked': ''%>>
                <label class="custom-control-label"
                    for="customControlInline<%=item.userid%>"><%= item.firstname %> <%= item.lastname %></label>
            </div>
            <% })%>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" style="border-radius: 10px;">
      Update
    </button>
  </form>
</div>
<% include ../partials/footers %>
>